<%- include('./static/header') %> 
    <div class="admin-title text-center bg-dark text-light">
        <h1 class="my-5">Welcome to Admin Login</h1>
    </div>
    <div class="container mb-5">
        <form onsubmit="authenticate()" id="authenticationForm">
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Email address</label>
              <input type="email" class="form-control" id="email" aria-describedby="emailHelp">
              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Password</label>
              <input type="password" class="form-control" id="password">
            </div>
            <div class="mb-3 form-check">
              <input type="checkbox" class="form-check-input" id="exampleCheck1">
              <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
    <script>
        function authenticate(){
            if(document.getElementById('email').value == '' || document.getElementById('password').value == ''){
                alert('Both fields are required')
            }else if(document.getElementById('email').value != 'harshitparikh2000@gmail.com' || document.getElementById('password').value != '123456780'){
                alert('Wrong Credential');
            } else{
                alert('Heyyaa! Login Successfull');
                localStorage.setItem('login','true')
                document.getElementById('authenticationForm').action = '/dashboard';
            }
        }
    </script>
